<div class="container-md">
  <div class="row">
    <div class="registration-form col-md-4 offset-md-4 py-4">
      <h2 class="h4 text-center my-5">アカウント登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, class: "form-control",placeholder: "例）山田 太郎", autofocus: true, autocomplete: "name" %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control", placeholder: "例）t_yamada@example.com", autofocus: true, autocomplete: "email" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", placeholder: "例）password", autocomplete: "new-password" %>
          <small class="form-text text-muted">6文字以上必要です</small>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>

        <!-- ランダム文字列を初期値にする -->
        <%= f.hidden_field :peer_id, value: [*'A'..'Z', *'a'..'z', *'0'..'9'].sample(16).join %>
        
        <div class="form-group pt-4">
          <%= f.submit "登録", class: "btn btn-primary form-control" %>
        </div>
      <% end %>
      <%= link_to 'ログイン', new_user_session_path, class: "btn btn-outline-info btn-block" %>
    </div>
  </div>
</div>
